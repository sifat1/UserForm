
@{
    ViewData["Title"] = "My Forms";
    Layout = "_Layout";
}

<h2 class="mt-4 mb-4">My Forms</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't created any forms yet.</div>
}
else
{
    <div class="row">
        @foreach (var form in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                <div class="card-body">
                    <a asp-action="EditForm" asp-route-id="@form.FormId" class="btn btn-sm btn-outline-primary me-2">
                        <h5 class="card-title">@form.FormTitle</h5>
                        <p class="card-text">@form.Questions.Count question(s)</p>
                        </a>
                        <form method="post" asp-action="DeleteForm" asp-route-id="@form.FormId" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this form?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}