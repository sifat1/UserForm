@model int
@{
    ViewData["Title"] = "Form Details";
    Layout = "_Layout";
}

<h2>Form Details</h2>

<ul class="nav nav-tabs" id="formTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="edit-tab" data-bs-toggle="tab" data-bs-target="#editTab" type="button" role="tab">
            Edit
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="analytics-tab" data-bs-toggle="tab" data-bs-target="#analyticsTab" type="button" role="tab">
            Analytics
        </button>
    </li>
</ul>

<div class="tab-content mt-3">
    <div class="tab-pane fade show active" id="editTab" role="tabpanel">
        <iframe src="@Url.Action("Edit", "Forms", new { id = Model })"
                style="width:100%; height:600px; border:none;"></iframe>
    </div>
    <div class="tab-pane fade" id="analyticsTab" role="tabpanel">
        <iframe src="@Url.Action("Analytics", "Forms", new { id = Model })"
                style="width:100%; height:600px; border:none;"></iframe>
    </div>
</div>