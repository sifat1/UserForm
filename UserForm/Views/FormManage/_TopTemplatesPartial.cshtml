@model List<UserForm.ViewModels.FormManage.FormCardViewModel>


        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var form in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@form.FormTitle</h5>
                            <p><strong>Topic:</strong> @form.FormTopic</p>
                            <p>
                                @(string.IsNullOrEmpty(form.Description)
                                    ? ""
                                    : form.Description.Substring(0, Math.Min((int)(form.Description.Length * 0.5), form.Description.Length))
                                      + (form.Description.Length > (int)(form.Description.Length * 0.5) ? "..." : ""))
                            </p>

                            <div class="d-flex align-items-center gap-2 mb-2">
                                <form method="post" action="@Url.Action("Like", "FormManage")">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="formId" value="@form.Id" />
                                    <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        ❤️ Like (@form.LikeCount)
                                    </button>
                                </form>
                                @if (form.IsPublic && User.Identity.IsAuthenticated)
                                {
                                    <a class="btn btn-sm btn-outline-primary"
                                       href="@Url.Action("CreateFromTemplate", "Forms", new { id = form.Id })">
                                        Use as Template
                                    </a>
                                }

                                <a class="btn btn-sm btn-outline-success"
                                   href="@Url.Action("Submit", "UserDatatoForms", new { id = form.Id })">
                                    Fill Form
                                </a>
                            </div>
                    
                        </div>
                    </div>
                </div>
            }
        </div>